{
  "compilerOptions": {
    "lib": ["es6", "DOM"],
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compileOnSave": true
}
